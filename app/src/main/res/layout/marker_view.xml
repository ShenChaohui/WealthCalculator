<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_826dff"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_marker_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资产："
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_marker_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变化："
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_marker_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>